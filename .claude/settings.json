{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "_created_info": {
    "timestamp": "2026-02-13",
    "note": "Claude Code permissions for OrcaSlicer workspace - optimized for autonomous development"
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(*:cmake --build*)",
      "Bash(*:ctest*)",
      "Bash(*:git status*)",
      "Bash(*:git diff*)",
      "Bash(*:git log*)",
      "Bash(*:git branch*)",
      "Bash(*:git add*)",
      "Bash(*:git commit*)",
      "Bash(*:git push*)",
      "Bash(*:git pull*)",
      "Bash(*:git checkout*)",
      "Bash(*:ls*)",
      "Bash(*:pwd*)",
      "Bash(*:cd*)",
      "Bash(*:cat*)",
      "Bash(*:grep*)",
      "Bash(*:find*)",
      "Bash(*:mkdir*)",
      "Bash(*:cp*)",
      "Bash(*:mv*)",
      "Bash(*:echo*)",
      "Bash(*:python*)",
      "Bash(*:python3*)",
      "Bash(*:node*)",
      "Bash(*:npm*)",
      "Bash(*:yarn*)",
      "Bash(*:pip*)",
      "Bash(*:pip3*)",
      "Bash(*:make*)",
      "Bash(*:ninja*)",
      "Bash(*:clang*)",
      "Bash(*:gcc*)",
      "Bash(*:g++*)",
      "Bash(*:cl.exe*)",
      "WebFetch(domain:*)"
    ],
    "deny": [
      "Bash(*rm -rf /*)",
      "Bash(*rm -rf ~*)",
      "Bash(*shutdown*)",
      "Bash(*reboot*)",
      "Bash(*halt*)",
      "Bash(*poweroff*)",
      "Bash(*mkfs*)",
      "Bash(*dd if=*)",
      "Bash(*format*)",
      "Bash(*del /f /s /q*)",
      "Bash(*rmdir /s /q C:\\*)",
      "Edit(*:.git/*)",
      "Edit(*:.gitignore)",
      "Edit(*:package-lock.json)",
      "Edit(*:yarn.lock)",
      "Edit(*:Cargo.lock)",
      "Edit(*:Gemfile.lock)",
      "Edit(*:.vscode/settings.json)",
      "Write(*:.git/*)",
      "Write(*:.gitignore)",
      "Write(*:package-lock.json)",
      "Write(*:yarn.lock)",
      "Write(*:Cargo.lock)",
      "Write(*:Gemfile.lock)"
    ]
  },
  "autoSave": true,
  "telemetry": {
    "enabled": true
  }
}
